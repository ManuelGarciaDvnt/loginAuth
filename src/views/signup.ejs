<%- layout('./layouts/main.ejs') %>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="car">
            <div class="card-header mt-4 text-center">
                SIGN UP
            </div>
            <div class="card-body">
                <form action="/signup" method="post">
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" id="userEmail" placeholder="Type your email...">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" id="userPassword" placeholder="Type your password...">
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 btn-block">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>